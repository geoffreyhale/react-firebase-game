    "users": {
      ".read": "auth.uid != null",
      ".write": false,
      "$user_id": {
        ".write": "auth.uid != null && $user_id == auth.uid"
      }
    },
    "posts": {
      ".read": "auth.uid != null",
      ".write": false,
      "$post_id": {
