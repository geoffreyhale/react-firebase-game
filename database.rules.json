{
  "rules": {
    "users": {
      ".read": "auth.uid != null",
      ".write": false,
      "$user_id": {
        ".write": "auth.uid != null && $user_id == auth.uid"
      }
    },
    "posts": {
      ".read": "auth.uid != null",
      ".write": false,
      "$post_id": {
        ".write": "auth.uid != null && (!data.exists() || data.child('userId').val() == auth.uid)",
        "tags": {
          "$tags_id" : {
            ".write": "auth.uid != null && (!data.exists() || data.child('userId').val() == auth.uid)"
          }
        },
        "seen": {
          "$seen_id":{
            // ".read": "auth.uid != null && $seen_id == auth.uid", TODO
            ".write": "auth.uid != null && $seen_id == auth.uid"
          }
        },
        "upvote": {
          "$upvote_id":{
            ".write": "auth.uid != null && $upvote_id == auth.uid"
          }
        },
        "modality": {
          "votes": {
            "$vote_id": {
              ".write":"auth.uid != null && $vote_id == auth.uid"  
            }
          }
        }
      }
    },
    "notifications": {
      ".read": "auth.uid != null",
      ".write": "auth.uid != null",
    },
    "games": {
      ".read": "auth.uid != null",
      ".write": "auth.uid != null",
    }
  }
}